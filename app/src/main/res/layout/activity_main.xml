<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.iot.helloworld.MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="30sp"
         />

    <Button
        android:id="@+id/btn1"
        android:layout_below="@id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start SubActivity"
        android:onClick="startSubactivity"
        />
    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"/>
    <Button
        android:id="@+id/btnList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext"
        android:text="ListView"
        android:onClick="goToList"
        />
    <Button
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnList"
        android:text="ScrollView"
        android:onClick="goToScrollView"/>
    <Button
        android:id="@+id/naver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll1"
        android:text="Naver"
        android:onClick="startNaverOpenAPIActivity"
        />
    <Button
        android:id="@+id/daum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/naver"
        android:text="Daum"
        android:onClick="startDaumOpenAPIActivity"
        />


</RelativeLayout>
